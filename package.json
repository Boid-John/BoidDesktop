{
  "name": "boid",
  "productName": "Boid",
  "version": "0.0.5",
  "description": "Desktop Application for the Boid platform",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "build": "electron-forge package",
    "make": "electron-forge make",
    "pack-mac": "xattr -cr * && rm out/Boid-darwin-x64/Boid.app/Contents/Resources/app/node_modules/electron-sudo/dist/bin/applet.app/LICENSE && rm /Users/boid/Dev/boidDev/electoboid/out/Boid-darwin-x64/Boid.app/Contents/Resources/app/node_modules/electron-sudo/src/bin/applet.app/LICENSE && electron-osx-sign out/Boid-darwin-x64/Boid.app/ && electron-forge make --skip-package",
    "pack-win": "electron-forge make --skip-package",
    "publish": "electron-forge publish",
    "lint": "eslint src --color"
  },
  "keywords": [],
  "author": "boid",
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "packageManager": "npm",
        "asar": false,
        "icon": "./logo",
        "name": "<%= productName %>",
        "appCopyright": "Boid Inc.",
        "appBundleId": "com.boid.macos"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-wix",
          "config": {
            "manufacturer": "Boid Inc.",
            "description": "<%= description %>",
            "ui":{
              
            }
          }
        },
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "Boid",
            "iconUrl": "https://assets.boid.com/images/logo.ico",
            "setupIcon": "./logo.ico",
            "loadingGif": "./loading.gif"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "win32"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "auto-launch": "^5.0.5",
    "axios": "^0.19.0",
    "child-process-promise": "^2.2.1",
    "decompress-zip": "^0.3.2",
    "electron-is-dev": "^0.3.0",
    "electron-settings": "^3.2.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-unhandled": "^1.1.0",
    "fix-path": "^2.1.0",
    "fs-extra": "^5.0.0",
    "jsonfile": "^5.0.0",
    "machine-uuid": "^1.2.0",
    "sudo-prompt": "^8.2.5",
    "xml-to-json-promise": "0.0.3",
    "xml2js": "^0.4.19"
  },
  "devDependencies": {
    "@electron-forge/cli": "6.0.0-beta.33",
    "@electron-forge/maker-deb": "6.0.0-beta.33",
    "@electron-forge/maker-rpm": "6.0.0-beta.33",
    "@electron-forge/maker-squirrel": "6.0.0-beta.33",
    "@electron-forge/maker-wix": "^6.0.0-beta.39",
    "@electron-forge/maker-zip": "6.0.0-beta.33",
    "electron": "5.0.4",
    "electron-prebuilt-compile": "4.0.0",
    "electron-wix-msi": "^2.1.1"
  }
}
