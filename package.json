{
  "name": "boiddesktop",
  "productName": "Boid",
  "version": "0.0.5",
  "description": "Desktop Application for the Boid platform",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "build": "electron-forge package",
    "pack-mac": "xattr -cr * && rm out/Boid-darwin-x64/Boid.app/Contents/Resources/app/node_modules/electron-sudo/dist/bin/applet.app/LICENSE && rm /Users/boid/Dev/boidDev/electoboid/out/Boid-darwin-x64/Boid.app/Contents/Resources/app/node_modules/electron-sudo/src/bin/applet.app/LICENSE && electron-osx-sign out/Boid-darwin-x64/Boid.app/ && electron-forge make --skip-package",
    "pack-win": "electron-forge make --skip-package",
    "publish": "electron-forge publish",
    "lint": "eslint src --color"
  },
  "keywords": [],
  "author": "boid",
  "license": "MIT",
  "config": {
    "forge": {
      "make_targets": {
        "win32": [
          "squirrel"
        ],
        "darwin": [
          "dmg"
        ],
        "linux": [
          "deb",
          "rpm"
        ]
      },
      "electronPackagerConfig": {
        "asar": false,
        "icon": "./logo",
        "packageManager": "npm",
        "name": "<%= productName %>",
        "appCopyright": "Boid Inc.",
        "appBundleId": "com.boid.macos",
        "osxSign": false
      },
      "electronWinstallerConfig": {
        "name": "electroboid",
        "iconUrl": "https://assets.boid.com/images/logo.ico",
        "setupIcon": "./logo.ico",
        "loadingGif": "./loading.gif"
      },
      "electronInstallerDebian": {},
      "electronInstallerRedhat": {},
      "github_repository": {
        "owner": "",
        "name": ""
      },
      "windowsStoreConfig": {
        "packageName": "",
        "name": "electroboid"
      }
    }
  },
  "dependencies": {
    "auto-launch": "^5.0.5",
    "axios": "^0.19.0",
    "child-process-promise": "^2.2.1",
    "decompress-zip": "^0.3.2",
    "electron-is-dev": "^0.3.0",
    "electron-settings": "^3.2.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-unhandled": "^1.1.0",
    "fix-path": "^2.1.0",
    "fs-extra": "^5.0.0",
    "jsonfile": "^5.0.0",
    "machine-uuid": "^1.2.0",
    "sudo-prompt": "^8.2.5",
    "xml-to-json-promise": "0.0.3",
    "xml2js": "^0.4.19"
  },
  "devDependencies": {
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "electron": "^5.0.4",
    "electron-forge": "^5.2.4",
    "electron-prebuilt-compile": "4.0.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-config-prettier": "^2.10.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-prettier": "^2.7.0",
    "eslint-plugin-react": "^7.13.0"
  }
}
